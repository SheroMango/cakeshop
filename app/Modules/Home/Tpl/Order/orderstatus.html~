<script>
$(function(){
  var num=$('div[id=current]').parent('.status').index();
  var i=num;
  for (i; i > -1; i--){
      $('.status').eq(i).children(".schedule-top").addClass("default-icon");
	  $('.status').eq(i).children(".schedule-info").addClass("default-info");
	}
   
  
 
 
})
</script>
